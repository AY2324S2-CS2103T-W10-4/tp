<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Mail Window" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" >
    <scene>
        <Scene>
            <HBox alignment="CENTER" spacing="10" fx:id="mailWindowContainer">
                <children>
                    <Label fx:id="mailLinkLabel" text="Mailto Link">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Label>
                    <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy Link">
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </HBox>
        </Scene>
    </scene>
</fx:root>
